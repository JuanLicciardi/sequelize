<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title class="titulo">Editar Película</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
    </figure>
    <main class="add_main">
        <div class="add_titulo">
            <h1 class="titulo">Película a Editar: <span class="pelicula"><%= Movie.title %></span></h1>
        </div>
        <section class="add_seccion">
            <form class="add_formulario" action="/movies/update/<%= Movie.id %>" method="POST">
                <div class="form_contenedor">                    
                    <label for="title">Title </label>
                    <p><input type="text" name="title" id="title" value="<%= Movie.title %>" required></p>
                </div>
                <div class="form_contenedor">
                    <label for="rating">Rating </label>
                    <p><input type="number" name="rating" id="rating" value="<%= Movie.rating %>" required></p>
                </div>
                <div class="form_contenedor">
                    <label for="awards">Awards </label>
                    <p><input type="number" name="awards" id="awards" value="<%= Movie.awards %>" required></p>
                </div>
                <div class="form_contenedor">
                    <label for="release_date">Release date </label>
                    <p><input type="date" name="release_date" id="release_date" value="<%= moment(Movie.release_date).format('YYYY-MM-DD') %>" required></p>
                </div>
                <div class="form_contenedor">
                    <label for="length">Length </label>
                    <p><input type="number" name="length" id="" value="<%= Movie.length %>" required></p>
                </div>
                <div class="add_selector">
                    <label for="genre_id">Géneros</label>
                    <select name="genre_id" id="genre_id">
                        <% genres.forEach(genre => { %>
                            <option value="<%= genre.id %>" <%= genre.id === Movie.genre_id && 'selected' %> ><%= genre.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="add_botones">
                    <button class="boton_Return" type="submit">Actualizar Película</button>
                    <a  class="boton_Return" href="/movies">Listado de Películas</a>
                </div>
            </form>
        </section>
    </main>
</body>

</html>